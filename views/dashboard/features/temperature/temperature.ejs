<%- include('../../header.ejs', {pagename: pagename}); %>
<%- include('../../navbar.ejs', {username: username}); %>
    <div class="container-fluid">
        <% if (message) { %>
            <div class="alert"><%= message %></div>
        <% } %>
        <div class = "poo">
            <h1 class="heading">Temperature Form</h1>
                <form class="feature-form" method="post" action="temperature">
                    <label> Name</label>
                    <select id="familyMembers" name="member">
                        <% familyMembers = Array.from(familyMembers); %>
                        <% familyMembers.forEach(function(member) { %>
                          <option value="<%= member.member_id %>"><%= member.member_name %></option>
                        <% }); %>
                    </select>
                    <label> Temperature</label>
                    <input type="text" name="temp" required>
                    <input type="submit" value="Submit">
                </form>
        </div>
    
    </div>
<%- include('../../footer.ejs'); %>

